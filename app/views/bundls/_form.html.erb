<%= simple_form_for @bundl do |f| %>
  <%= f.input :title, required: true, placeholder: 'Ex. Cars, Sports, Programming', label: 'Title', error: 'Title is mandatory, please specify one' %>
  <%= f.input :description, as: :text, required: true, label: 'Description', error: 'Description is mandatory, please specify one' %>
  <%= f.button :submit, class: "btn btn-success position-right" %>
<% end %>

