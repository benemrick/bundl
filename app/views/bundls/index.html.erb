<p id="notice"><%= notice %></p>

<div class="d-flex flex-row justify-content-between mb-3"> 
  <h2 class="slogan ml-3 mt-3">COLLECT WHAT MATTERS</h2>
  <i class="far fa-plus btn btn-success btn-circle btn-lg" data-toggle="modal" data-target="#exampleModalCenter"></i> 
  <!--<%= link_to new_bundl_path do %> 
    <i class="far fa-plus btn btn-success btn-circle btn-lg" data-toggle="modal" data-target="#exampleModalCenter"></i> 
  <% end %>-->
</div> 

<!-- Modal -->
<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalCenterTitle">New bundl</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= simple_form_for(@bundl, html: { class: 'form-inline' }) do |f| %>
          <%= f.label :title %>
          <%= f.input_field :title %>
          <%= f.label :description %>
          <%= f.input_field :description, as: :text %>
          <%= f.button :submit, class: "btn btn-primary" %>
        <% end %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>

<div class="d-flex flex-wrap">
  <% @bundls.each do |bundl| %>
    <div class="col-auto mb-4">
      <div class="card" style="width: 20rem; height:25rem;">
        <!--Unsplash::Photo.search(bundl.title).sample[:urls][:raw]-->
        <!--"https://source.unsplash.com/1600x900/?utah"-->
        <%= image_tag Unsplash::Photo.search(bundl.title).sample[:urls][:regular], class: "card-img-top", id: "unsplash", :size => "90x200" %>
        <div class="card-body">
          <div class="d-flex justify-content-between mb-3">
            <div>
              <%= get_item_count(bundl.id) %> 
              <%= is_multiple_items(bundl.id) %>
            </div>
            <div class="d-flex justify-content-end">
              <%= link_to '<i class="far fa-edit link-to-text-color"></i>'.html_safe, edit_bundl_path(bundl) %>
            </div>
          </div>
          <%= link_to bundl_path(bundl) do %>
            <h5 class="card-title link-to-text-color"><%= bundl.title[0,20] %></h5>
          <% end %>
          <p class="card-text"><%= bundl.description[0,70] %></p>
          <div class="d-flex justify-content-between mb-3">
            <div class="mt-7">
              <small class="text-muted">Last updated on <%= bundl.updated_at.strftime("%B %d") %></small>
            </div>
            <%= link_to '<i class="far fa-trash link-to-text-color"></i>'.html_safe, bundl, method: :delete, data: { confirm:
              'Are you sure?' } %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

<br />

