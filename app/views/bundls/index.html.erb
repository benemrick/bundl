<p id="notice"><%= notice %></p>

<div class="mb-4">
  <form class="form-inline my-2 my-lg-0">
      <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
      <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
  </form>
</div>

<div class="card-deck">
  <% @bundls.each do |bundl| %>
    <%= link_to bundl_path(bundl) do %>>
      <div class="card">
        <div class="card-body">
          <div class="card-header">
              <%= get_item_count(bundl.id) %> 
              <%= is_multiple_items(bundl.id) %>
          </div>
          <h5 class="card-title"><%= bundl.title %></h5>
          <p class="card-text"><%= bundl.description %></p>
          <div class="card-footer">
              <small class="text-muted">Last updated on <%= bundl.updated_at.strftime("%B %d") %></small>
          </div>    
        </div>
      </div>
    <% end %>
  <% end %>
</div>


<br />

<%= link_to 'New Bundl', new_bundl_path %>
