<%= simple_form_for @media_item do |f| %>
  <%= f.input :name, required: true, label: 'Name', error: 'Name is mandatory, please specify one' %>
  <%= f.input :description, as: :text, label: 'Description' %>
  <%= f.input :url, :as => :url, required: true, label: 'URL', placeholder: "Enter a valid URL", error: 'URL is mandatory, please specify one' %>
  <%= f.input :source, label: 'Source', placeholder: "Where is this resource from? Ex. YouTube, Stack Overflow, CNN, etc." %>
  <%= f.input :bundl_id, :as => :hidden, :input_html => {:value => params[:bundl_id]} %>
  <%= f.button :submit, class: "btn btn-success position-right" %>
<% end %>
